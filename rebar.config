{erl_opts, [debug_info,
           warnings_as_errors,
           warn_untyped_record,
           {platform_define, "^[0-9]+", namespaced_types},
           {parse_transform, lager_transform}]}.
{eunit_opts, [verbose]}.
{edoc_opts, [preprocess,
             {dir, "edoc"}]}.
{cover_enabled, true}.
{xref_checks, [undefined_function_calls]}.
{deps, [{lager, ".*", {git, "https://github.com/basho/lager.git", {tag, "3.2.4"}}},
        {eleveldb, ".*", {git, "https://github.com/basho/eleveldb.git", {tag, "riak_ts-1.5.0"}}}]}.

{port_specs,
 [{".*", "priv/riak_ensemble.so",
   ["c_src/*.c*"],
   [{env, [{"CFLAGS", "$CFLAGS"}]}]
  }]}.
