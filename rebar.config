{brt_protect, true}.

{erl_opts, [
    warn_bif_clash,
    warn_export_all,
    warn_export_vars,
    warn_obsolete_guard,
    warn_unused_import,
    {parse_transform, lager_transform}
]}.

{deps, [
    {eleveldb,
        {git, "https://github.com/basho/eleveldb.git",
        {branch, "feature/riak-2903/rebar3"} }},
    {lager,
        {git, "https://github.com/basho/lager.git",
        {branch, "feature/riak-2903/rebar3"} }}
]}.

{pre_hooks, [
    {"(linux|darwin|solaris)",  compile,  "make  -C c_src dist"},
    {"(freebsd)",               compile,  "gmake -C c_src dist"}
]}.

{post_hooks, [
    {"(linux|darwin|solaris)",  clean,  "make  -C c_src clean-dist"},
    {"(freebsd)",               clean,  "gmake -C c_src clean-dist"}
]}.

{profiles, [
    {check, [
        {dialyzer, [
            {warnings, [
                error_handling,
                race_conditions,
                unknown,
                unmatched_returns
            ]}
        ]},
        {erl_opts, [
            debug_info,
            warnings_as_errors,
            {d, 'BASHO_CHECK'}
        ]},
        {overrides, [
            {add, eleveldb, [{erl_opts, [debug_info]}]},
            {add, lager, [{erl_opts, [debug_info]}]}
        ]},
        {xref_checks, [
            deprecated_function_calls,
            deprecated_functions,
            locals_not_used,
            undefined_function_calls,
            undefined_functions
        ]}
    ]},
    {docs, [
        {edoc_opts, [
            {app_default, "http://www.erlang.org/doc/man"},
            {preprocess, true},
            {macros, [
                {'EDOC', true},
                {'BASHO_DOCS', true}
            ]}
        ]}
    ]},
    {prod, [
        {erl_opts, [
            warnings_as_errors,
            {d, 'BASHO_PROD'}
        ]}
    ]},
    {test, [
        {cover_enabled, true},
        {deps, [
            {meck,
                {git, "https://github.com/basho/meck.git",
                {branch, "feature/riak-2903/rebar3"} }}
        ]},
        {erl_opts, [
            debug_info,
            nowarn_deprecated_function,
            nowarn_export_all,
            nowarn_unused_function,
            nowarn_unused_import,   % EQC
            warnings_as_errors,
            {d, 'BASHO_TEST'}
        ]}
    ]},
    {validate, [
        {erl_opts, [
            strong_validation,
            no_auto_import,
            warn_bif_clash,
            warn_deprecated_function,
            warn_deprecated_type,
            warn_export_all,
            warn_export_vars,
            warn_missing_spec,
            warn_missing_spec_all,
            warn_obsolete_guard,
            warn_shadow_vars,
            warn_untyped_record,
            warn_unused_function,
            warn_unused_import,
            warn_unused_record,
            warn_unused_vars,
            {d, 'BASHO_VALIDATE'}
        ]}
    ]}
]}.

{plugins, [
    {basho_rebar_tools,
        {git, "https://github.com/basho/basho_rebar_tools.git",
        {branch, "master"} }},
    {rebar_raw_resource,
        {git, "https://github.com/basho/rebar_raw_resource.git",
        {branch, "master"} }}
]}.

