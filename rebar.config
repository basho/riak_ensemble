{erl_opts, [debug_info,
           warnings_as_errors,
           warn_untyped_record,
           {platform_define, "^[0-9]+", namespaced_types}]}.

{eunit_opts, [verbose]}.
{edoc_opts, [preprocess,
             {dir, "edoc"}]}.
{cover_enabled, true}.
{xref_checks, [undefined_function_calls]}.
{deps, [
  {eleveldb, {git, "https://github.com/basho/eleveldb.git", {branch, "develop"}}}
]}.

{plugins, [{eqc_rebar, {git, "https://github.com/Quviq/eqc-rebar", {branch, "master"}}}, pc]}.
{provider_hooks,
 [
  {pre,
   [
    {compile, {pc, compile}},
    {clean, {pc, clean}}
   ]
  }
 ]
}.

{port_specs,
 [{".*", "priv/riak_ensemble.so",
   ["c_src/*.c*"],
   [{env, [{"CFLAGS", "$CFLAGS"}]}]
  }]}.
